<?xml version="1.0" encoding="utf-8"?>
<!--说明
    table : 配置表的基本项
    table.path_in    : xml表路径
    table.path_out   : 输出打表后的文件名称
    table.autonumber : 是否自动判断int、double类型并以此类型存储（0否、1是）
    table.isdir    : 是否目录（0否、1是）
    table/ignore: 忽略该节点
    table/number: 指定该字段为number（autonumber=0时，默认全部导出为string）
    table/string: 指定该字段为string（autonumber=1时，默认将符合的字符串导出为number）
    table/array: array数组: 节点名称（树状结构，每一层用“.”隔开）
    table/dict:  dict字典:  节点名称（树状结构，每一层用“.”隔开）
    table/dict.key:  dict字典的主键
    table/tuple:  tuple元祖: 节点名称（树状结构，每一层用“.”隔开）
-->
<config>
    <table path_in="xml1.xml" path_out="table1" autonumber="0">
        <!-- person -->
        <number> person.man.id </number>
        <number> person.man.weight </number>
        <string> person.man.name </string>
        <!-- animal -->
        <array> animal.pet </array>
        <dict key="id"> animal.pet.cat </dict>
        <!-- trans -->
        <array> trans.car </array>
        <!-- value -->
        <number> value4 </number>
        <ignore> value6 </ignore>
        <!-- others -->
        <array> others </array>
        <tuple name="fruits"> others </tuple>
    </table>
    <table path_in="xml1.xml" path_out="table2" autonumber="1">
        <!-- animal -->
        <array> animal.pet </array>
        <dict key="id"> animal.pet.cat </dict>
        <!-- trans -->
        <array> trans.car </array>
        <!-- value -->
        <string> value4 </string>
    </table>
    <table path_in="in" path_out="out" autonumber="0" isdir="1">
        <!-- trans -->
        <array> trans.car </array>
    </table>
</config>

